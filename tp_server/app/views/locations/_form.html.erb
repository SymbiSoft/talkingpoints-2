  <p>
		<label for="location_name">Name</label><br />
	  <%= f.text_field :name %>
	</p>
	
	<p>
		<label for="location_type_id">Type</label><br/>
		<select name="location[location_type_id]">
	  	<% @location_types.each do |location_type| %>
	    <option value="<%= location_type.id %>" 
	    	<%= ' selected="selected"' if location_type.id == @location.location_type_id %>>
	    	<%= location_type.name %>
	    </option>
	  	<% end %>
	  </select>
	</p>
	
	<p>
	  <label for="location_description">Description</label><br />
	  <%= f.text_area :description %>
	</p>
	
	<p>
	  <label for="location_bluetooth_mac">Bluetooth mac</label><br />
	  <%= f.text_field :bluetooth_mac %>
	</p>
	
	<p>
	  <label for="location_lat">Latitude</label><br />
	  <%= f.text_field :lat %>
	</p>
	
	<p>
	  <label for="location_lng">Longitude</label><br />
	  <%= f.text_field :lng %>
	</p>
	
	<p>
	  <label for="location_street">Street</label><br />
	  <%= f.text_field :street %>
	</p>
	
	<p>
	  <label for="location_city">City</label><br />
	  <%= f.text_field :city %>
	</p>
	
	<p>
	  <label for="location_state">State</label><br />
	  <%= f.text_field :state %>
	</p>
	
	<p>
	  <label for="location_postal_code">Postal code</label><br />
	  <%= f.text_field :postal_code %>
	</p>
	
	<p>
	  <label for="location_country">Country</label><br />
	  <%= f.text_field :country %>
	</p>
	
	<p>
	  <label for="location_url">Url</label><br />
	  <%= f.text_field :url %>
	</p>
	
	<p>
	  <label for="location_phone">Phone</label><br />
	  <%= f.text_field :phone %>
	</p>