<h2>Listing sections</h2>

<% unless @sections.empty? %>
<ul style="list-style-type: none; padding-left: 0px;">
<% for section in @sections %>
	<li>
		<%= link_to(image_tag('forward.png', {:class => 'forward'}), location_section_path(@location, section)) %>
		<%= link_to(section.name, location_section_path(@location, section)) %>
		[<%= link_to 'edit', edit_location_section_path(@location, section) %> |
		<%= link_to 'delete', location_section_path(@location, section), :confirm => 'Are you sure?', :method => :delete %>]
	</li>
<% end %>
</ul>
<% else %>
<p>There are no sections.</p>
<% end %>

<h2>New section</h2>

<%= error_messages_for :section %>

<% form_for(@section, :url => location_sections_path(@location)) do |f| %>
  <p>
  	<label for="section_name">Name</label><br />
  	<%= f.text_field :name %>
	</p>

  <p>
  	<label for="section_text">Text</label><br />
  	<%= f.text_area :text %>
	</p>

  <p><%= f.submit "Create" %></p>
<% end %>
