<h2>Editing section</h2>

<%= error_messages_for :section %>

<% form_for(@section, :url => location_section_path(@location, @section)) do |f| %>
  <p>
    <label for="section_name">Name</label><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <label for="section_text">Text</label><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
